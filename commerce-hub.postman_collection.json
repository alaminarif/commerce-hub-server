{
  "info": {
    "_postman_id": "ecommerce-backend",
    "name": "E-Commerce Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:5000/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["products"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"T-Shirt\",\n  \"description\": \"Soft cotton t-shirt\",\n  \"variants\": [\n    { \"name\": \"Red - M\", \"price\": 20, \"stock\": 10 },\n    { \"name\": \"Blue - L\", \"price\": 22, \"stock\": 5 }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["products"]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Create Cart",
          "request": {
            "method": "POST",
            "url": {
              "raw": "http://localhost:5000/cart",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["cart"]
            }
          }
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:5000/cart/{{cartToken}}/items",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["cart", "{{cartToken}}", "items"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"variantId\": \"{{variantId}}\",\n  \"quantity\": 2\n}"
            }
          }
        },
        {
          "name": "Apply Promo",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:5000/cart/{{cartToken}}/apply-promo",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["cart", "{{cartToken}}", "apply-promo"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"SAVE10\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Promo",
      "item": [
        {
          "name": "Create Promo",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:5000/promos",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["promos"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"SAVE10\",\n  \"type\": \"percent\",\n  \"value\": 10,\n  \"validFrom\": \"2025-01-01T00:00:00Z\",\n  \"validTo\": \"2025-12-31T23:59:59Z\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Checkout",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:5000/orders/checkout/{{cartToken}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["orders", "checkout", "{{cartToken}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shippingAddress\": {\n    \"name\": \"Arif\",\n    \"email\": \"email@example.com\",\n    \"address\": \"123 Main St\",\n    \"city\": \"Dhaka\",\n    \"country\": \"Bangladesh\",\n    \"zip\": \"10001\"\n  }\n}"
            }
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/orders/{{orderId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:5000/orders/{{orderId}}/status",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["orders", "{{orderId}}", "status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{ \"status\": \"shipped\" }"
            }
          }
        }
      ]
    }
  ]
}
